@import "variables.styl"
@import "functions.styl"
@import "helper.styl"
@import "bg.styl"


.blue-select
  color #fff
  background-color selectBlue
.blue
  color txtBlue
.light-grey
  color txtGrey
.extra-small
  font-size extrasmallText
.small-text
  font-size smallText
.middle-text
  font-size middleText
.header
  font-size header
.big-ls
  letter-spacing 0.07rem
.extrabig-ls
  letter-spacing: 0.15rem;

body
  padding-top: 40px;
  font-family: 'Arimo', sans-serif;
  color txtBlack
a
  text-decoration none
  color txtRed
  font-size middleText
  &:hover
    text-decoration none
h1,h2
  color txtRed
h2
  font-size bigHeader
h4
  font-size middleText
h1, h2, h3, h4, h6
  font-weight bold
.mobile
  display none
.container
  padding-bottom 28px
  padding-top: 57px;
  position relative
  overflow hidden
  background-color #fff
.navbar-collapse
  display block
.navbar-nav
  display flex
.navbar
  background txtBlack
  height 40px
  .inner
    width: 1070px;
  a
    color #fff
    font-size 1rem
.reg
  div
    margin-top: 5px;
    border 2px solid #fbb900
    a
      color #fbb900
      padding: 2px 1.7rem 0 1.7rem;
      line-height: 1.4rem;
.fb
  .nav-link
    padding-top: 6px;
    padding-bottom: 6px;
    padding-right 0!important
  img
    width: 27px;
.navbar-expand-lg .navbar-nav .nav-link
    padding-right: 1.8rem;
    padding-left: 1.8rem;
.date
  width: 100px;
  margin-top: 5px;
.logo
  size(51px, 100%)
  margin-top 4px
  img
    width 100%
.reg-btn
  font-weight bold
  font-size middleText
  letter-spacing 0.07rem
  border: 2px solid txtBlue;
  padding: 0.5rem 1.1rem;
  color txtRed
  transition background-color 0.3s, color 0.3s
  &:hover
    background-color txtBlue
    color #fff
.map-btn
  position: absolute;
  z-index: 10;
  width: 100%;
  bottom: 45px;
  .reg-btn
    background-color #fff
    &:hover
      background-color txtBlue
      color #fff
.screen-1
  .container
    padding-top 20px
    overflow visible
  .change
    margin-top: -16px;
    margin-bottom: 53px;
    margin-left: 6px;
    img
      transform: rotate(-34deg);
      width: 94%;
  .rotate
    transform: rotate(-34deg);
  .intro
    margin-top: -82px;
    margin-bottom: 88px;
    .first-col
      padding-right: 55px;
      padding-left: 21px;
    .second-col
      padding-left: 55px;
      padding-right: 65px;
    p
      margin 0
      font-size 1rem
  .first-conf
    absoluteAll(85px, auto, auto, 129px)
    width 350px
    font-weight bold
    font-size 1.625rem
    letter-spacing: 0.05rem;
  .powerd
    absoluteAll(auto, auto, 65px, 35px)
    width 176px
    div
      margin-bottom 5px
    img
      width 100%
.screen-1, .screen-2
  .btn-row
    margin-bottom 17px
.screen-2
  .container
    padding-bottom: 28px;
  .head-row
    margin-bottom 15px
  .custom-col
    margin 0 auto
    width 200px
    .middle-text
      width 100%
      text-align center
      line-height: 1.4rem;
  .big-num
    font-size 7.625rem
    line-height: 8.2rem;
  .middle-text
    line-height: 0.4rem;
  .num-row
    margin-bottom: 30px;
  .text-row
    margin-bottom 60px
  h4
    margin-bottom: 0.85rem;
  .small-text
    line-height: 1.5rem;
  .sub-head-row
    margin-top: 0;
    margin-bottom: 50px;
    h3
      letter-spacing: -0.03rem;
.screen-3
  .container
    padding-bottom: 70px;
  .head-row
    margin-bottom 40px
  .expand-btn
    line-height 1.4rem
    padding-right 15%
    margin-bottom: 25px;
    a
      color #fff
      displayFlex(row, center, space-between)
      size(100%, 100%)
      padding 0 10px
      transition background-color 0.3s
    .arrow
      transform rotate(180deg)
      &.arrow-expanded
        transform rotate(0)
  .program-row
    margin-bottom: 34px;
  .program
    h3
      margin-bottom 52px
    h6
      font-size smallText
      line-height 1.5rem
      margin-bottom 0
    div, p
      font-size smallText
    p
      margin-bottom 0
      line-height 1.5rem
      color txtGrey
    .collapse
      color txtBlack
    div
      margin-bottom: 30px;
      padding-right 15%
.screen-4
  .container
    padding-bottom: 70px;
  .head-row
    margin-bottom 40px
  .speaker-row
    margin-bottom: 21px;
  .speaker
    max-width: 175px;
    padding-left: 15px;
    padding-right: 15px;
    margin-bottom: 150px;
    &.carousel-item
      display none !important
      transition transform 0.5s, opacity 0.3s
      &.active
        display flex !important
      &.carousel-item-next
        display flex!important
      &.carousel-item-prev
        display flex!important
    img
      margin-bottom 25px
      width 125px
    .name-wrap
      margin-bottom 10px
    .name
      font-size middleText
      display inline-block
      line-height: 1.6rem;
      padding: 0 5px;
      margin-bottom 4px
      &:last-child
        margin-bottom 0
    .post
      font-size extrasmallText
      margin-bottom: 15px;
    .bio
      font-size extrasmallText
.border-container-blue
  .container
    border 32px solid selectBlue
    padding-top: 10px;
    padding-bottom: 55px;
  .head-row
    margin-bottom: 40px;
  .small-text
    line-height: 1.5rem;
  .text-row
    margin-bottom: 25px;
    .col-lg-6
      padding-left: 50px;
    p
      margin-bottom 0
  .data-row
    margin-bottom 33px
    .col-lg-3
      &:first-child
        padding-left: 50px;
    h4
      margin-bottom 0.2rem
  .red-text
    color txtRed
    margin-bottom 20px

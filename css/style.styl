  .pr-partner
    width 290px
    img
      width: 49%;
      margin-top: -16px;
  .info-partners
      margin-bottom 25px
    .partner-logo
      height 120px
  .dop-row
    margin-bottom 64px
  .scan
    width 122px
    img
      margin-top: 20px;
  .macs
    width 225px
    img
      margin-top: 5%;
  .rma
    width 150px
    img
      margin-top: 6%;
  .alpina
    width 190px
    img
      width: 100%
      margin-top: 3%;
  .k-water
    width 180px
    img
      width: 100%
      margin-top: 3%;
  .secret
    width 200px
    img
      width 100%
.screen-6
  iframe
    position relative
  .container
    padding-bottom: 65px;
    border 32px solid selectBlue
  .head-row
    margin-bottom: 62px;
  .legal-row
    padding 0 30px
    .legal
      font-size extrasmallText
.location
  background bgGrey
  color #fff
  margin-bottom: 12px;
  .container
    padding-bottom: 10px;
    background bgGrey
  h2
    color #fff
  .col-logo
    margin-bottom: 35px;
  .location-logo
    width 65px
    img
      width 100%
  .head-row
    margin-bottom 8px
  .logo-row
    margin-bottom: 35px;
  .address-row
    p
      margin-bottom 2px
.outer
  width 100%
  max-width 100%
  position relative
  overflow hidden
  background-color bgGrey
.line
  display: flex;
  flex-wrap: wrap;
  &.head-line
    width: calc(100% - 100px);
    margin: 0 auto;
  &.sub-line
    width: calc(100% - 150px);
    margin: 0 auto;
.blue-bg
  background-color selectBlue
  color #fff
  height 200px
#map
  width: 100%;
  height: 495px;
  padding: 0;
  margin: 0;
  ymaps[class*="ground-pane"]
    filter: brightness(50%);
    -ms-filter: brightness(50%);
    -webkit-filter: brightness(50%);
    -moz-filter: brightness(50%);
    -o-filter: brightness(50%);
  ymaps[class*="copyrights-pane"]
    a[class*="copyright__link"]
      font-size 0.75rem
